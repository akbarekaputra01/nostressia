############################
# Core application settings #
############################
APP_NAME="Nostressia API"
API_PREFIX="/api"

#######################
# Database configuration
#######################
# Use DATABASE_URL for local/dev/test overrides.
DATABASE_URL="sqlite+pysqlite:///./nostressia.db"
DB_USER="nostressia"
DB_PASSWORD="change-me"
DB_HOST="localhost"
DB_PORT=3306
DB_NAME="nostressia"

######################
# Authentication / JWT
######################
JWT_SECRET="replace-with-a-secure-secret"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

##########################
# Email (Brevo) settings #
##########################
BREVO_API_KEY="replace-with-your-brevo-key"

#############################
# Azure Storage configuration
#############################
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=nostressia;AccountKey=YOUR_KEY;EndpointSuffix=core.windows.net"
AZURE_STORAGE_ACCOUNT_NAME="nostressia"
AZURE_STORAGE_CONTAINER_NAME="profile-avatars"

##############################
# Push notification (VAPID)
##############################
VAPID_PUBLIC_KEY="replace-with-your-public-key"
VAPID_PRIVATE_KEY="replace-with-your-private-key"
VAPID_SUBJECT="mailto:nostressia.official@gmail.com"
